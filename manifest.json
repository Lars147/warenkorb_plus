{
  "manifest_version": 3,
  "name": "Warenkorb+",
  "version": "2.0.0",
  "description": "Importiere deine Cookidoo-Einkaufsliste in Knuspr, REWE und andere Online-Superm√§rkte",
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://cookidoo.de/*",
    "https://*.cookidoo.de/*",
    "https://www.knuspr.de/*",
    "https://knuspr.de/*",
    "https://www.rewe.de/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://cookidoo.de/shopping/*", "https://*.cookidoo.de/shopping/*"],
      "js": [
        "shared/config.js",
        "shared/utils.js",
        "shared/storage.js",
        "sites/cookidoo-content.js"
      ],
      "css": ["styles/cookidoo.css"]
    },
    {
      "matches": ["https://www.knuspr.de/*", "https://knuspr.de/*"],
      "js": [
        "shared/config.js",
        "shared/utils.js",
        "shared/storage.js",
        "shared/sidebar.js",
        "sites/knuspr-content.js"
      ],
      "css": ["styles/sidebar.css"]
    },
    {
      "matches": ["https://www.rewe.de/*"],
      "js": [
        "shared/config.js",
        "shared/utils.js",
        "shared/storage.js",
        "shared/sidebar.js",
        "sites/rewe-content.js"
      ],
      "css": ["styles/sidebar.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  }
}
